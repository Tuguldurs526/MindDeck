{
  "name": "minddeck",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -n SERVER,WEB,MOBILE -c green,cyan,magenta \"npm:dev -w apps/server\" \"npm:dev -w apps/web\" \"npm:start -w apps/mobile\"",
    "dev:server": "npm run dev -w apps/server",
    "dev:web": "npm run dev -w apps/web",
    "dev:mobile": "npm start -w apps/mobile",
    "lint": "echo 'add linters per app'",
    "typecheck": "echo 'add TS build per app'"
  },
  "devDependencies": {
    "@expo/server": "^0.7.5",
    "concurrently": "^9.0.0",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "mammoth": "^1.11.0",
    "multer": "^2.0.2",
    "openai": "^6.10.0",
    "pdf-parse": "^2.4.5"
  }
}
